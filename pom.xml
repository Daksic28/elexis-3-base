<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.elexis.base</groupId>
  <artifactId>elexis-3-base</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <properties>
    <tycho.version>0.18.0</tycho.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <tycho-extras.version>0.18.0</tycho-extras.version>
    <juno-repo.url>http://download.eclipse.org/releases/juno</juno-repo.url>
    <tycho-repo.url>https://oss.sonatype.org/content/groups/public/</tycho-repo.url>
  </properties>
  <packaging>pom</packaging>
  <modules>
    <module>ch.elexis.base.ch.artikel</module>
    <module>ch.elexis.base.ch.arzttarife</module>
    <module>ch.elexis.base.ch.ebanking</module>
    <module>ch.elexis.base.ch.feature</module>
    <module>ch.elexis.base.ch.labortarif_2009</module>
    <!--module>ch.elexis.base.ch.p2site</module-->
  </modules>
  <repositories>
    <repository>
      <id>elexis.3.snapshot</id>
      <url>http://download.elexis.info/elexis.3.snapshot</url>
      <layout>p2</layout>
    </repository>

